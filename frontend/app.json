{
  "expo": {
    "name": "Artywiz",
    "slug": "artywiz-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "artywiz",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.artywiz.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Artywiz utilise la caméra pour scanner des documents et prendre des photos.",
        "NSPhotoLibraryUsageDescription": "Artywiz accède à votre galerie pour sélectionner des images.",
        "NSPhotoLibraryAddUsageDescription": "Artywiz enregistre les documents générés dans votre galerie."
      }
    },
    "android": {
      "package": "com.artywiz.mobile",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0066FF"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0066FF"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "owner": "your-expo-username"
  }
}
